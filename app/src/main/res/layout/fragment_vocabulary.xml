<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lnVoca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtSearchVocabulary"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="7"
            android:background="@drawable/custom_search"
            android:hint="   search vocabulary" />

        <ImageButton
            android:id="@+id/btnVoiceVocabulary"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/edtSearchVocabulary"
            android:background="@drawable/ic_speaking" />

        <ImageButton
            android:id="@+id/btnSetingVoice"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/btnVoiceVocabulary"
            android:background="@drawable/ic_volume_up_black_24dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnVoca"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lvVocabulary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_background">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>